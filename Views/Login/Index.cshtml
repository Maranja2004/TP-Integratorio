@{
    ViewData["Title"] = "Login Page";
    Layout = null; // No usa layout
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .login-box {
            width: 100%;
            background: white;
            padding: 20px;
            border: 1.4px solid black;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            border-radius: 20px;
            max-width: 350px;
            margin: auto;
        }

             .login-box p, .login-box input, .login-box button {
                font-size: clamp(0.74rem, 1.2vw, 1rem) !important;
            }

            .login-box h4{
                font-size: clamp(1rem, 1.4vw, 1.2rem) !important;
            }
    </style>
</head>
    <body>
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 px-3">
                    <div class="login-box my-5">
                        <h4 class="text-center">Iniciar Sesión</h4>
                        <p>Por favor, ingrese los datos de su cuenta.</p>
                        <form asp-controller="Login" asp-action="Login" method="post">
                            <input type="text" name="user" placeholder="Usuario" class="form-control mb-2" />
                            <input type="password" name="clave" placeholder="Contraseña" class="form-control mb-2" />
                            <button type="submit" class="btn btn-primary w-100">Iniciar sesión</button>
                            <span class="text-danger">@ViewBag.Mensaje</span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>